  <!-- Scripts -->
  <script>
    // Lead form: fall back to Cal.com with prefilled query
    document.getElementById('lead-form')?.addEventListener('submit', function(e){
      e.preventDefault();
      const fd = new FormData(this);
      const name = encodeURIComponent(fd.get('name') || '');
      const email = encodeURIComponent(fd.get('email') || '');
      const challenge = encodeURIComponent(fd.get('challenge') || '');
      const url = `https://cal.com/nxtgenpms/discovery-call?name=${name}&email=${email}&notes=${challenge}`;
      window.open(url, '_blank', 'noopener');
    });

    // FAQ toggles
    document.querySelectorAll('.faq-question').forEach(item => {
      item.addEventListener('click', () => {
        document.querySelectorAll('.faq-question.open').forEach(openItem => {
          if (openItem !== item) openItem.classList.remove('open');
        });
        item.classList.toggle('open');
      });
    });

    // Testimonials carousel (one at a time, auto 5s + arrows + dots)
    (function () {
      const slides = Array.from(document.querySelectorAll('#testimonial-carousel .testimonial-slide'));
      const prevBtn = document.getElementById('prev-testimonial');
      const nextBtn = document.getElementById('next-testimonial');
      const dotsWrap = document.getElementById('testimonial-dots');
      if (!slides.length) return;

      let i = 0, timer = null;

      // Build dots
      slides.forEach((_, idx) => {
        const b = document.createElement('button');
        b.className = 'w-2.5 h-2.5 rounded-full bg-white/40';
        b.setAttribute('aria-label', 'Go to slide ' + (idx + 1));
        b.addEventListener('click', () => { go(idx); restart(); });
        dotsWrap.appendChild(b);
      });

      function render() {
        slides.forEach((el, idx) => el.classList.toggle('hidden', idx !== i));
        Array.from(dotsWrap.children).forEach((d, idx) => {
          d.classList.toggle('bg-white', idx === i);
          d.classList.toggle('bg-white/40', idx !== i);
        });
      }
      function go(idx) { i = (idx + slides.length) % slides.length; render(); }
      function next() { go(i + 1); }
      function prev() { go(i - 1); }
      function start() { timer = setInterval(next, 5000); }
      function stop() { if (timer) clearInterval(timer); timer = null; }
      function restart() { stop(); start(); }

      render(); start();
      nextBtn?.addEventListener('click', () => { next(); restart(); });
      prevBtn?.addEventListener('click', () => { prev(); restart(); });

      const carousel = document.getElementById('testimonial-carousel');
      carousel?.addEventListener('mouseenter', stop);
      carousel?.addEventListener('mouseleave', start);
    })();

    // Geo-based currency (symbol only, plain 5000)
    (async function () {
      const priceEl = document.getElementById('dynamic-price');
      const base = Number(priceEl?.dataset?.base || 5000);
      const EUROPE_CC = new Set(['AL','AD','AM','AT','AZ','BY','BE','BA','BG','CH','CY','CZ','DE','DK','EE','ES','FI','FR','GB','GE','GR','HR','HU','IE','IS','IT','KZ','XK','LI','LT','LU','LV','MC','MD','ME','MK','MT','NO','NL','PL','PT','RO','RU','SE','SI','SK','SM','TR','UA','VA']);

      function render(curr) {
        if (!priceEl) return;
        const symbol = curr === 'USD' ? '$' : curr === 'GBP' ? '£' : '€';
        priceEl.textContent = symbol + base;
        const cap = document.getElementById('dynamic-price-caption');
        if (cap) cap.setAttribute('data-currency', curr);
      }

      async function detectCurrency() {
        try {
          const res = await fetch('https://ipapi.co/json/');
          if (!res.ok) throw new Error('geo failed');
          const data = await res.json();
          const cc = String(data.country_code || '').toUpperCase();
          if (cc === 'US') return 'USD';
          if (cc === 'GB') return 'GBP';
          if (EUROPE_CC.has(cc)) return 'EUR';
          return 'EUR';
        } catch {
          const lang = (navigator.language || '').toLowerCase();
          if (lang.includes('-us')) return 'USD';
          if (lang.includes('-gb')) return 'GBP';
          return 'EUR';
        }
      }

      render(await detectCurrency());
    })();
  </script>
</body>
